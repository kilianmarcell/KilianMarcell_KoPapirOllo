<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/teValasztasod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewTeValasztasod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rock"/>

        <TextView
            android:id="@+id/textViewTeValasztasod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A te választásod"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gepValasztasa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewGepValasztasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rock" />

        <TextView
            android:id="@+id/textViewGepValasztasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A gép választása"
            android:textSize="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eredmeny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eredmény: "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/emberPontTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ember: 0 "
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/gepPontTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer: 0"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/valasztas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/koGomb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kő"/>

        <Button
            android:id="@+id/papirGomb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Papír"
            android:layout_marginHorizontal="20dp"/>

        <Button
            android:id="@+id/olloGomb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olló"/>

    </LinearLayout>

</LinearLayout>